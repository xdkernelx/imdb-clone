<h1><%= @film.name %></h1>
<% if current_user %>
  <%= link_to "Leave review", new_film_review_path(@film)  %>
<% else %>
  Want to leave a review? <%= link_to "Log in", new_user_session_path %>
<% end %>

<!jQuery UI tab code>
  <link rel="stylesheet" href="//code.jquery.com/ui/1.12.1/themes/base/jquery-ui.css">
  <link rel="stylesheet" href="/resources/demos/style.css">
  <script src="https://code.jquery.com/jquery-1.12.4.js"></script>
  <script src="https://code.jquery.com/ui/1.12.1/jquery-ui.js"></script>

<div id="tabs">
  <ul>
    <li><a href="#tabs-1">The Pros</a></li>
    <li><a href="#tabs-2">The People</a></li>
  </ul>
  <div id="tabs-1">
    <% @trusted_reviews.each do |review| %>
      <div class="review-show">
      <div class="padding">
      <h3><%= review.title %></h3>
      <p><% review.rating.times do %>
          <%= image_tag("/assets/star-full.png", :alt => "Full Star") %>
        <% end %>
        <% (5 - review.rating).times do %>
          <%= image_tag("/assets/star-empty.png", :alt => "Full Star") %>
        <% end %>

      </p>
      <p class="words"><%= review.body %></p>
      <p class="words"><%= review.reviewer.first_name %> <%= review.reviewer.last_name %></p>
      <ul>
        <% review.comments.each do |comment| %>
          <li class="words">
            <%= comment.text %>
          </li>
        <% end %>
      </ul>
      <% params[:review_id] = review.id %>
      <%= render 'comments/form' %>
    </div>
  </div>
  <% end %>
  <div id="tabs-2">
    <% @people_reviews.each do |review| %>
      <div class="review-show">
      <div class="padding">
      <h3><%= review.title %></h3>
      <p>
        <% review.rating.times do %>
          <%= image_tag("/assets/star-full.png", :alt => "Full Star") %>
        <% end %>
        <% (5 - review.rating).times do %>
          <%= image_tag("/assets/star-empty.png", :alt => "Full Star") %>
        <% end %>
      </p>
      <p><%= review.body %></p>
      <p><%= review.reviewer.first_name %> <%= review.reviewer.last_name %></p>
      <ul>
        <% review.comments.each do |comment| %>
          <li>
            <%= comment.text %>
          </li>
          <% end %>
        </ul>

        <%= render 'comments/form', locals: { review_id: review.id } %>
        </div>
        </div>
      <% end %>
  </div>
</div>
</div>
