<h1><%= link_to "Filmster", films_path, id: "filmster"%></h1>
<nav class="navbar navbar-default">
  <div class="container-fluid">
    <% if user_signed_in? %>
      <ul class="nav navbar-nav">
        <li class="navbar-text"> Hello, <%= current_user.first_name %> </li>
        <li><%= link_to "Logout", destroy_user_session_path, :method => :delete %></li>
      </ul>
    <% else %>
      <ul class="nav navbar-nav">
        <li><%= link_to "Login", new_user_session_path%></li>
        <li><%= link_to "Register", new_user_registration_path%></li>
      </ul>
    <% end %>
    <div id="bar">
       <%= link_to "Recent Reviews", reviews_path, class: "navbar-form navbar-left" %>
       <%= link_to "Film Categories", categories_path%>
       <%= form_tag(films_path, :method => "get", class: "form-group") do %>
         <%= text_field_tag :search, params[:search], placeholder: "Search Posts" %>
         <%= submit_tag "Search" %>
      <% end %>
      </div>
    </div>
  </div>
</nav>

<h2>Recently Reviewed Films </h2>
<div class="container-fluid">

    <% @films.each do |film| %>
      <div class='col-md-4 film' id=<%= film.name %>>
        <p><%= link_to film.name, film_path(film) %></p>
      </div>
    <% end %>

</div>
